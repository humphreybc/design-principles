// Some global stuff

body
  font-family primaryFonts
  color black
  font-size baseFontSize
  font-weight 400
  width 100%
  padding 15px
  box-sizing border-box
  margin 20px auto 150px
  -webkit-font-smoothing antialiased

a
  text-decoration none
  color inherit

  &:hover
    color blue

// The header

h1
  color blue
  margin 0px 0px 20px
  font-size 2em
  line-height 1em
  padding-bottom 10px
  border-bottom 5px solid lightGray
  font-weight 300
  letter-spacing -0.05em

  b
    font-weight 400

.meta 

  h2
    margin -10px 0px 15px
    font-weight 400
    font-size 0.5em
    color gray
    text-transform uppercase

    a .icon-twitter
      margin-left 5px
      vertical-align middle
      font-size fontSmall

  i
    text-transform lowercase
    font-size 0.9em

  #share
    margin-bottom 40px

// Principles container (ul)

.principles
  margin 250px 0px
  list-style-type none
  padding 0px

// Each principle (li)

.principle
  margin 10px 0px 150px
  position relative
  color gray
  overflow hidden
  clear both
  font-size 0.8em

  h3
    color blue
    margin 0px 0px 10px
    padding 0px
    font-weight normal
    float left
    max-width 80%
    
    a:hover
      color darken(blue, 5)

  p
    border-top 5px solid lightGray
    margin 0px
    padding 10px 0px
    color black
    float left
    width 100%

    a
      color #666

      &:hover
        color blue

  .icon-earth
    margin-top 0.55em
    font-size 0.6em
    float right

// Responsive

@media screen and (min-width: 600px)
  body
    width 600px
    margin 150px auto
    font-size 38px

@media screen and (min-width: 900px)
  body
    width 800px

@media screen and (min-width: 1200px)
  body
    width 900px
    font-size 42px